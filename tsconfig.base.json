{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2022",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@poc-nx-module-federation-with-yarn/counter-data": [
        "libs/shared-data/src/index.ts"
      ],
      "@poc-nx-module-federation-with-yarn/decrement-button": [
        "libs/decrement-button/src/index.ts"
      ],
      "@poc-nx-module-federation-with-yarn/increment-button": [
        "libs/increment-button/src/index.ts"
      ],
      "@poc-nx-module-federation-with-yarn/reset-button": [
        "libs/reset-button/src/index.ts"
      ],
      "remote-app1/Routes": [
        "remote-app1/src/app/remote-entry/entry.routes.ts"
      ],
      "remote-app2/Routes": ["remote-app2/src/app/remote-entry/entry.routes.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
